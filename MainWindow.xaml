<Window x:Class="GoogleAssistantWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleAssistantWindows"
        mc:Ignorable="d"
        Title="IntelAct" Height="585.166" Width="705.667" Loaded="MainWindow_OnLoaded" ResizeMode="CanMinimize">
    <Grid Margin="0,0,4,-304" RenderTransformOrigin="0.501,0.548">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Background="CornflowerBlue" HorizontalAlignment="Stretch" Margin="0,10,0,721" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:GoogleAccountControl Margin="0,0,0,50" />
            <Button x:Name="ButtonRecord" Content="Press to Talk" Padding="10" Margin="10,75,100,4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="90" Click="ButtonRecord_OnClick" IsEnabled="False" IsDefault="True" Height="41"/>
            <Label x:Name="lblTranslatedText" Content="" HorizontalAlignment="Left" Margin="113,75,0,0" VerticalAlignment="Top" Width="512" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" Foreground="#FF279E21" Height="41" Background="#FFA3EE04"/>
        </Grid>

        <!--<Grid Background="Chocolate" HorizontalAlignment="Stretch" Margin="0,31,0,721" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:GoogleAccountControl />

        </Grid>-->


        <ListBox Grid.Row="1" x:Name="ListBoxOutput" Margin="8,344,10,332" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <Label Content="Keywords" Margin="0,75,421,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Action" Margin="0,101,421,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Entity" Margin="0,127,421,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Search" Margin="0,153,421,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Url" Margin="0,179,421,0" Grid.Row="1" VerticalAlignment="Top"/>

        <Label x:Name="IA_keywords" Content="[Keywords]" Margin="98,75,334,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label x:Name="IA_action" Content="[Action]" Margin="98,101,334,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label x:Name="IA_entity" Content="[Entity]" Margin="98,127,334,0" Grid.Row="1" VerticalAlignment="Top" />
        <Label x:Name="IA_search" Content="[Search]" Margin="98,153,334,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label x:Name="IA_url" Content="[Url]" Margin="98,179,334,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Image Source="Resources/IntelAct.PNG" Margin="249,8,242,2"/>

    </Grid>

</Window>
